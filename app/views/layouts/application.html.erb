<!DOCTYPE html>
<html>
  <head>
    <title>Shine</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="container">
    <% if notice.present? %>
      <aside class="alert alert-info"> <%= notice %> </aside>
    <% end %>
    <% if alert.present? %>
      <aside class="alert alert-danger"> <%= alert %> </aside>
    <% end %>
    <%= yield %>
  </body>
</html>
